---
const { class: className, content, isTitle , isBullet } = Astro.props;
import Bullet from "./Bullet.astro";
---

<li class="flex items-center sm:justify-center">
  <Bullet class="sm:hidden" />
  <div
    class="service-item sm:flex sm:flex-col sm:justify-center sm:items-center sm:gap-2"
  >
    {
      isTitle ? (
        <span class="font-black text-2xl">حضور آنلاین</span>
      ) : (
        ""
      )
    }
    <span class="text-xl" >{content}</span>
  </div>
</li>
